<%- include('partials/_header'); %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-ms-5">
            <div class="card">
                <div class="card-body p-2">
                    <form action="/add" method="POST" enctype="multipart/form-data" >                     
                        <!--title-->
                        <div class="form-goup m-2" id="idTitle">
                            <input type="text" name="title" id="title" placeholder="Insert  a Title Task" required
                            class="form-control">
                        </div>
                        <!--description-->
                        <div class="form-group m-2">
                            <textarea class="form-control" name="description" id="description" rows="3"
                                placeholder="Insert a Description" required></textarea>
                        </div>
                        <!--preority-->
                        <div class="well well-sm text-center  m-2">
                            <div class="btn-group" data-toggle="buttons">

                                <label class="btn btn-success active bg-success">
                                    <input type="radio" name="preority" id="option0" autocomplete="off" checked="checked"  value="0" >
                                    <span class="glyphicon glyphicon-ok"></span>
                                </label>
                                <label class="btn btn-warning">
                                    <input type="radio" name="preority" id="option1" autocomplete="off" value="1">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </label>
                                <label class="btn btn-danger">
                                    <input type="radio" name="preority" id="option2" autocomplete="off" value="2">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </label>

                            </div>
                        </div>
                        <!--fecha limite-->
                        <div class="m-2">
                            <input class="form-control" type="date" id=" deafline" placeholder=" deafline"
                                name="deafline">
                        </div>
                        <!--img-->
                        <div style="width:100%" class=" container">
                            <div class=" custom-file">

                                <input type="file" accept="image/png, .jpeg" class="custom-file-input" name="img"
                                    id="img">
                                <label class="custom-file-label" for="inputGroupFile02">Choose image</label>
                            </div>
                        </div>
                        <!--button-->
                        <div class="m-2">
                            <button type="submit" class="btn btn-primary btn-block ">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7 ">
            <table class="table table-bordered table-hover ">
                <thead class="thead-dark">
                    <tr>
                        <th><i class="fas fa-check-square"></i></th>
                        <th>NÂ°</th>
                        <th>Title</th>
                        <th>CreationDate</th>                      
                        <th>Deafline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <%for(var i=0; i < tasks.length; i++ ) { %>                       
                    <tr
                        class="<%= tasks[i].preority==0 ? 'table-success':tasks[i].preority==1 ?'table-warning':'table-danger'%>">
                        <td><a style="z-index:2;position:absolute;opacity:0;" href="/check/<%= tasks[i].id%>">a</a>
                            <input type="checkbox" <%= tasks[i].state ? checked="checked" : false %>></td>
                        <th><%= i + 1  %></td>
                        <td><%= tasks[i].title  %></td>
                        <td><%= tasks[i].creationDate.getDate()%>/<%= tasks[i].creationDate.getMonth()%>/<%= tasks[i].creationDate.getFullYear()%>
                        </td>
                        <td> <% if(tasks[i].deafline != undefined) {%>
                            <%= tasks[i].deafline.getDate()%>/<%= tasks[i].deafline.getMonth()%>/<%= tasks[i].deafline.getFullYear()%>
                            <%}%>
                        </td>
                        </td>
                        <td>
                            <div class="text-center"><a href="/delete/<%= tasks[i].id%>" class="far fa-trash-alt"></a>                     
                            <a href="" class="fas fa-edit"></a> </div>
                            <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
<%- include('partials/_footer'); %>